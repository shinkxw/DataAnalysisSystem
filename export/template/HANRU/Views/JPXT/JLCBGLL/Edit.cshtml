@model HanRuEdu.LDAL.EDU_JPXT_01_02_JLCBGLL
@using (Html.BeginForm())
{
    @Html.Partial("SingleZTree")
    <div id="dlg" class="easyui-panel" title="编辑" style="width: 900px; height: 500px; padding: 10px 20px">
        <center>  <h1 ><span style="font-size:smaller;">编辑</span></h1></center>

        <table class="admintable">
            <tr>
                <td width="50%"></td>
                <td width="50%"></td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.ID) </td> <!--编号-->
                <td>
                    @Html.TextBoxFor(m => m.ID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.ID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SCHOOLID) </td> <!--学校ID-->
                <td>
                    @Html.DropDownListFor(m => m.SCHOOLID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.SCHOOLID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.JLCID) </td> <!--教练车ID-->
                <td>
                    @Html.DropDownListFor(m => m.JLCID, ViewBag.JPXT_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.JLCID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.JLYID) </td> <!--教练员ID-->
                <td>
                    @Html.DropDownListFor(m => m.JLYID, ViewBag.JPXT_02Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.JLYID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.BGKSSJ) </td> <!--保管开始时间-->
                <td>
                    @Html.TextBoxFor(m => m.BGKSSJ, new { @class = "easyui-datetimebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.BGKSSJ)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.BGJSSJ) </td> <!--保管结束时间-->
                <td>
                    @Html.TextBoxFor(m => m.BGJSSJ, new { @class = "easyui-datetimebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.BGJSSJ)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.BGZT) </td> <!--保管状态-->
                <td>
                    @Html.TextBoxFor(m => m.BGZT, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.BGZT)
                </td>
            </tr>

        </table>
        <br />
        @{ ViewData["ce_cancel"] = Url.Content("~/jpxt/jlcbgll/index");}
        @Html.Partial("~/views/shared/CreateEditToolBarPage.cshtml", this.ViewData)
    </div>
}
