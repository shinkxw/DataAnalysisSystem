                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SCHOOLID) </td> <!--学校ID-->
                <td>
                    @Html.DropDownListFor(m => m.SCHOOLID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.SCHOOLID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.XYID) </td> <!--学员ID-->
                <td>
                    @Html.DropDownListFor(m => m.XYID, ViewBag.JPXT_03Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.XYID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.HFSJ) </td> <!--回访时间-->
                <td>
                    @Html.TextBoxFor(m => m.HFSJ, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.HFSJ)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.HFJG) </td> <!--回访结果-->
                <td>
                    @Html.TextBoxFor(m => m.HFJG, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.HFJG)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.BZ) </td> <!--备注-->
                <td>
                    @Html.TextBoxFor(m => m.BZ, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.BZ)
                </td>
            </tr>

        </table>
        <br />
        @{ ViewData["ce_cancel"] = Url.Content("~/xtgl/xyhfxx/index");}
        @Html.Partial("~/views/shared/CreateEditToolBarPage.cshtml", this.ViewData)
    </div>
}
