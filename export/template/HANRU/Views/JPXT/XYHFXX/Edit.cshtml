                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.XYID) </td> <!--学员ID-->
                <td>
                    @Html.TextBoxFor(m => m.XYID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.XYID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.HFSJ) </td> <!--回访时间-->
                <td>
                    @Html.TextBoxFor(m => m.HFSJ, new { @class = "easyui-datetimebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.HFSJ)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.HFJG) </td> <!--回访结果-->
                <td>
                    @Html.TextAreaFor(m => m.HFJG, new { @class = "easyui-validatebox", style = "width:150px; " })
