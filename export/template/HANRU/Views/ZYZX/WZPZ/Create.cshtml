@model HanRuEdu.LDAL.EDU_ZYZX_MHXT_WZPZ
@using (Html.BeginForm())
{
    @Html.Partial("SingleZTree")
    <div id="dlg" class="easyui-panel" title="添加" style="width: 900px; height: 500px; padding: 10px 20px">
        <center>  <h1 ><span style="font-size:smaller;">添加</span></h1></center>

        <table class="admintable">
            <tr>
                <td width="50%"></td>
                <td width="50%"></td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.WEBID) </td> <!--网站ID-->
                <td>
                    @Html.DropDownListFor(m => m.WEBID, ViewBag.ZYZX_MHXTLst as SelectList)
                    @Html.ValidationMessageFor(m => m.WEBID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SCHOOLID) </td> <!--学校名-->
                <td>
                    @Html.DropDownListFor(m => m.SCHOOLID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.SCHOOLID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.WEBNAME) </td> <!--网站名-->
                <td>
                    @Html.TextBoxFor(m => m.WEBNAME, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.WEBNAME)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.STATUID) </td> <!--是否开启-->
                <td>
                    @Html.TextBoxFor(m => m.STATUID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.STATUID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.WEBURL) </td> <!--网址-->
                <td>
                    @Html.TextBoxFor(m => m.WEBURL, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.WEBURL)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.CSSID) </td> <!--网站样式-->
                <td>
                    @Html.DropDownListFor(m => m.CSSID, ViewBag.ZYZX_MHXTLst as SelectList)
                    @Html.ValidationMessageFor(m => m.CSSID)
                </td>
            </tr>

        </table>
        <br />
        @{ ViewData["ce_cancel"] = Url.Content("~/xtgl/wzpz/index");}
        @Html.Partial("~/views/shared/CreateEditToolBarPage.cshtml", this.ViewData)
    </div>
}
