@model HanRuEdu.LDAL.EDU_ELE_02_YHFZ
@using (Html.BeginForm())
{
    @Html.Partial("SingleZTree")
    <div id="dlg" class="easyui-panel" title="编辑" style="width: 900px; height: 500px; padding: 10px 20px">
        <center>  <h1 ><span style="font-size:smaller;">编辑</span></h1></center>

        <table class="admintable">
            <tr>
                <td width="50%"></td>
                <td width="50%"></td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.ID) </td> <!--分组ID-->
                <td>
                    @Html.TextBoxFor(m => m.ID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.ID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SCHOOLID) </td> <!--学校ID-->
                <td>
                    @Html.DropDownListFor(m => m.SCHOOLID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.SCHOOLID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.APPID) </td> <!--应用ID-->
                <td>
                    @Html.DropDownListFor(m => m.APPID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.APPID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.YHID) </td> <!--用户ID-->
                <td>
                    @Html.DropDownListFor(m => m.YHID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.YHID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SJFZID) </td> <!--上级分组ID-->
                <td>
                    @Html.DropDownListFor(m => m.SJFZID, ViewBag.ELE_02Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.SJFZID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.FZMC) </td> <!--分组名称-->
                <td>
                    @Html.TextBoxFor(m => m.FZMC, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.FZMC)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.FZYHID) </td> <!--分组用户ID列表-->
                <td>
                    @Html.TextAreaFor(m => m.FZYHID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @*@Html.MYeWebEditorFor(m=>m.NR, null, new FckConfig { Height = "350", Width = "650", Skin = FckSkin.Default, ToolbarSet = FckToolbarSet.Basic }, Url.Content("~/") )*@
                    @Html.ValidationMessageFor(m => m.FZYHID)
                </td>
            </tr>

        </table>
        <br />
        @{ ViewData["ce_cancel"] = Url.Content("~/jpxt/yhfz/index");}
        @Html.Partial("~/views/shared/CreateEditToolBarPage.cshtml", this.ViewData)
    </div>
}
