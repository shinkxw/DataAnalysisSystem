@model HanRuEdu.LDAL.EDU_ELE_05_XLZ
@using (Html.BeginForm())
{
    @Html.Partial("SingleZTree")
    <div id="dlg" class="easyui-panel" title="编辑" style="width: 900px; height: 500px; padding: 10px 20px">
        <center>  <h1 ><span style="font-size:smaller;">编辑</span></h1></center>

        <table class="admintable">
            <tr>
                <td width="50%"></td>
                <td width="50%"></td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.ID) </td> <!--编号-->
                <td>
                    @Html.TextBoxFor(m => m.ID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.ID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SCHOOLID) </td> <!--学校ID-->
                <td>
                    @Html.DropDownListFor(m => m.SCHOOLID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.SCHOOLID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.XLID) </td> <!--校历ID-->
                <td>
                    @Html.DropDownListFor(m => m.XLID, ViewBag.ELE_05Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.XLID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.NAME) </td> <!--校历周名称-->
                <td>
                    @Html.TextBoxFor(m => m.NAME, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.NAME)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.STARTDAY) </td> <!--开始日期-->
                <td>
                    @Html.TextBoxFor(m => m.STARTDAY, new { @class = "easyui-datetimebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.STARTDAY)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.ENDDAY) </td> <!--结束日期-->
                <td>
                    @Html.TextBoxFor(m => m.ENDDAY, new { @class = "easyui-datetimebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.ENDDAY)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.ZJH) </td> <!--周计划-->
                <td>
                    @Html.TextBoxFor(m => m.ZJH, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.ZJH)
                </td>
            </tr>

        </table>
        <br />
        @{ ViewData["ce_cancel"] = Url.Content("~/jpxt/xlz/index");}
        @Html.Partial("~/views/shared/CreateEditToolBarPage.cshtml", this.ViewData)
    </div>
}
