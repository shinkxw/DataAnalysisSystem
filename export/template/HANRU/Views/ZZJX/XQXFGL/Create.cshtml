@model HanRuEdu.LDAL.EDU_ZZJX_03_A01_XQXFGL
@using (Html.BeginForm())
{
    @Html.Partial("SingleZTree")
    <div id="dlg" class="easyui-panel" title="添加" style="width: 900px; height: 500px; padding: 10px 20px">
        <center>  <h1 ><span style="font-size:smaller;">添加</span></h1></center>

        <table class="admintable">
            <tr>
                <td width="50%"></td>
                <td width="50%"></td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SCHOOLID) </td> <!--学校ID-->
                <td>
                    @Html.DropDownListFor(m => m.SCHOOLID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.SCHOOLID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.XQID) </td> <!--学期ID-->
                <td>
                    @Html.DropDownListFor(m => m.XQID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.XQID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.JHBH) </td> <!--计划编号-->
                <td>
                    @Html.DropDownListFor(m => m.JHBH, ViewBag.ZZJX_03Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.JHBH)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.ZDXF) </td> <!--最高学分-->
                <td>
                    @Html.TextBoxFor(m => m.ZDXF, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.ZDXF)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.ZGXF) </td> <!--最低学分-->
                <td>
                    @Html.TextBoxFor(m => m.ZGXF, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.ZGXF)
                </td>
            </tr>

        </table>
        <br />
        @{ ViewData["ce_cancel"] = Url.Content("~/xtgl/xqxfgl/index");}
        @Html.Partial("~/views/shared/CreateEditToolBarPage.cshtml", this.ViewData)
    </div>
}
