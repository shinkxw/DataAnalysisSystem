                    @Html.DropDownListFor(m => m.SXJDID, ViewBag.ZZJX_07Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.SXJDID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.MC) </td> <!--名称-->
                <td>
                    @Html.TextBoxFor(m => m.MC, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.MC)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.KSSJ) </td> <!--开始时间-->
