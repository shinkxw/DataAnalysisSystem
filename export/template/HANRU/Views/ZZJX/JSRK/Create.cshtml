                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.JXDG) </td> <!--教学大纲-->
                <td>
                    @Html.TextBoxFor(m => m.JXDG, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.JXDG)
                </td>
            </tr>

        </table>
        <br />
        @{ ViewData["ce_cancel"] = Url.Content("~/jpxt/jsrk/index");}
        @Html.Partial("~/views/shared/CreateEditToolBarPage.cshtml", this.ViewData)
    </div>
}
