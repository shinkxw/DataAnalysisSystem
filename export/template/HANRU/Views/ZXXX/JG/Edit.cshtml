@model HanRuEdu.LDAL.EDU_ZXXX_04_01_JG
@using (Html.BeginForm())
{
    @Html.Partial("SingleZTree")
    <div id="dlg" class="easyui-panel" title="编辑" style="width: 900px; height: 500px; padding: 10px 20px">
        <center>  <h1 ><span style="font-size:smaller;">编辑</span></h1></center>

        <table class="admintable">
            <tr>
                <td width="50%"></td>
                <td width="50%"></td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SCHOOLID) </td> <!--学校名-->
                <td>
                    @Html.DropDownListFor(m => m.SCHOOLID, ViewBag.ELE_01Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.SCHOOLID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.JGH) </td> <!--机构号-->
                <td>
                    @Html.TextBoxFor(m => m.JGH, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.JGH)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.LSJGH) </td> <!--隶属机构号-->
                <td>
                    @Html.DropDownListFor(m => m.LSJGH, ViewBag.ZXXX_04Lst as SelectList)
                    @Html.ValidationMessageFor(m => m.LSJGH)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.JGMC) </td> <!--机构名称-->
                <td>
                    @Html.TextBoxFor(m => m.JGMC, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.JGMC)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.JGJC) </td> <!--机构简称-->
                <td>
                    @Html.TextBoxFor(m => m.JGJC, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.JGJC)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.FZRGH) </td> <!--负责人工号-->
                <td>
                    @Html.TextBoxFor(m => m.FZRGH, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.FZRGH)
                </td>
            </tr>

        </table>
        <br />
        @{ ViewData["ce_cancel"] = Url.Content("~/xtgl/jg/index");}
        @Html.Partial("~/views/shared/CreateEditToolBarPage.cshtml", this.ViewData)
    </div>
}
