@model HanRuEdu.LDAL.EDU_OAXT_10_A02_TZYDJL
@using (Html.BeginForm())
{
    @Html.Partial("SingleZTree")
    <div id="dlg" class="easyui-panel" title="编辑" style="width: 900px; height: 500px; padding: 10px 20px">
        <center>  <h1 ><span style="font-size:smaller;">编辑</span></h1></center>

        <table class="admintable">
            <tr>
                <td width="50%"></td>
                <td width="50%"></td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.ID) </td> <!--通知阅读记录ID-->
                <td>
                    @Html.TextBoxFor(m => m.ID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.ID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SCHOOLID) </td> <!--学校ID-->
                <td>
                    @Html.TextBoxFor(m => m.SCHOOLID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.SCHOOLID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.TZID) </td> <!--通知ID-->
                <td>
                    @Html.TextBoxFor(m => m.TZID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.TZID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.BTZRID) </td> <!--被通知人ID-->
                <td>
                    @Html.TextBoxFor(m => m.BTZRID, new { @class = "easyui-validatebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.BTZRID)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.YDRQ) </td> <!--阅读日期-->
                <td>
                    @Html.TextBoxFor(m => m.YDRQ, new { @class = "easyui-datetimebox", style = "width:150px; " })
                    @Html.ValidationMessageFor(m => m.YDRQ)
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(m => m.SFYD) </td> <!--是否已阅读-->
                <td>
                    @Html.DropDownListFor(m => m.SFYD, ViewBag.JY_SFBZLst as SelectList)
                    @Html.ValidationMessageFor(m => m.SFYD)
                </td>
            </tr>

        </table>
        <br />
        @{ ViewData["ce_cancel"] = Url.Content("~/jpxt/tzydjl/index");}
        @Html.Partial("~/views/shared/CreateEditToolBarPage.cshtml", this.ViewData)
    </div>
}
